<ul>
<div>
    <% @products.each do |product| %>
        <li style="display: inline-block;" class="m-2">
            <div class="card bg-info p-1" style="width: 15rem;height:23rem;">
                <img src="<%= product.image %>" class="card-img-top" style="background-color: white;border-radius: 10px;">
                <div class="card-body">
                    <h5 class="text-white" style="font-size: 100%"><%= product.title %></h5>
                    <div>
                        <p class="card-text" style="font-size: 110%;"><strong>R$<%= product.price %></strong></p>
                    </div>
                </div>
            </div>
        </li>
    <% end %>
</div>
</ul>